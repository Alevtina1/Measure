body
  width 100%
  height 100%
  overflow hidden

#root
  position absolute
  display flex
  align-items center
  justify-content center
  top 0px
  left 0px
  right 0px
  bottom 0px
  overflow hidden
  background #333

.app
  display flex
  flex-direction row
  background #fff
  border 1px solid #eee
  width 90%
  height 90%
  .dashboard
    flex 2
    display flex
    flex-direction column
    padding 5px
    input
      width 100%
    .field
      display flex
      flex-direction column
      margin-bottom 5px
  .canvas-element
    border 1px solid black
  .canvas
    flex 8
    border 1px solid black
